@page
@model asprazor.Pages.BookList.IndexModel
@{
}
<br>
                            <form method="POST">
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info text-white float-right">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        @if(Model.Books.Count() > 0) {
            <table class="table table-stripe border">
                <tr>
                    <th><label asp-for="Books.FirstOrDefault().Name"></label></th>
                    <th><label asp-for="Books.FirstOrDefault().Author"></label></th>
                    <th><label asp-for="Books.FirstOrDefault().ISBN"></label></th>
                    <th><label>Action</label></th>
                </tr>
                @foreach (var item in Model.Books)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Author)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ISBN)
                        </td>
                        <td>
                              <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are sure')" class="btn btn-danger btn-sm">Delete</button>
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">Edit</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else {
            <p class="text-center">No books found</p>
        }
    </div>

</div>
                            </form>
